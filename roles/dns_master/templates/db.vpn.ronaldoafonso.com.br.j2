;
; BIND data file for {{ dns_vpn_domain.name }} domain
;

$TTL	86400

@	IN	SOA	{{ dns_vpn_domain.ns1 }}.{{ dns_vpn_domain.name }}. root.{{ dns_vpn_domain.name }}. (
						1906181526     	; Serial
						86400		; Refresh
						86400		; Retry
						2419200		; Expire
						86400)		; Negative Cache TTL

	IN	NS	{{ dns_vpn_domain.ns1 }}.{{ dns_vpn_domain.name }}.
	IN	NS	{{ dns_vpn_domain.ns2 }}.{{ dns_vpn_domain.name }}.
	IN	MX	10 {{ dns_vpn_domain.host2 }}.{{ dns_vpn_domain.name }}.
	IN	TXT	"v=spf1 +mx -all"

{{ dns_vpn_domain.ns1 }}	IN	A	{{ dns_vpn_domain.ns1_ipv4addr }}
	IN	AAAA	{{ dns_vpn_domain.ns1_ipv6addr }}

{{ dns_vpn_domain.ns2 }}	IN	A	{{ dns_vpn_domain.ns2_ipv4addr }}
	IN	AAAA	{{ dns_vpn_domain.ns2_ipv6addr }}

{{ dns_vpn_domain.host1 }}	IN	A	{{ dns_vpn_domain.host1_ipv4addr }}
	IN	AAAA	{{ dns_vpn_domain.host1_ipv6addr }}

{{ dns_vpn_domain.host2 }}	IN	A	{{ dns_vpn_domain.host2_ipv4addr }}
	IN	AAAA	{{ dns_vpn_domain.host2_ipv6addr }}

{{ dns_vpn_domain.host3 }}	IN	A	{{ dns_vpn_domain.host3_ipv4addr }}
	IN	AAAA	{{ dns_vpn_domain.host3_ipv6addr }}

{{ dns_vpn_domain.host1_alias1 }}	IN	CNAME	{{ dns_vpn_domain.host1 }}.{{ dns_vpn_domain.name }}.

{{ dns_vpn_domain.host2_alias1 }}	IN	CNAME	{{ dns_vpn_domain.host2 }}.{{ dns_vpn_domain.name }}.

{{ dns_vpn_domain.host2_alias2 }}	IN	CNAME	{{ dns_vpn_domain.host2 }}.{{ dns_vpn_domain.name }}.
